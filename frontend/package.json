{
  "name": "@luci/unified-frontend",
  "version": "1.0.0",
  "description": "Unified consolidated frontend for Plesk + Doctrine with 1Password, Sync, and Lighthouse CI integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "api": "node src/api/server.js",
    "api:dev": "nodemon src/api/server.js",
    "doctrine:migrate": "node src/api/doctrine/migrate.js",
    "doctrine:fixtures": "node src/api/doctrine/fixtures.js",
    "plesk:sync": "node src/api/plesk/sync-servers.js",
    "start": "concurrently \"npm run api\" \"npm run dev\"",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@plesk/api-php-lib": "^1.0.0",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "better-sqlite3": "^9.2.2",
    "typeorm": "^0.3.19",
    "reflect-metadata": "^0.2.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/better-sqlite3": "^7.6.8",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "@tanstack/react-query": "^5.14.2",
    "recharts": "^2.10.3",
    "lucide-react": "^0.303.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
